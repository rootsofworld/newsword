<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <style>
        textarea {
            resize: none;
        }

        .form-container{
            display: flex;
        }

        label{
            display: inline;
        }
        .vis {
            border: 1px solid black;
        }

        .header{
            color: white;
            height: 20px;
            background-color: aqua;
            margin-bottom: 15px;
        }


    </style>
</head>
<body>
    <div class="header"></div>
    <div class="container">
        <div class="row justify-content-around">
            <div class="form-container col-3">
                <form>
                    <div class="topic_input">
                        <label for="topic">Topic</label>
                        <textarea name="topic" id="topic" cols="30" rows="6" required>{{topic}}</textarea>
                    </div>
                    <div class="keywords_input">
                        <label for="keywords">Keywords</label>
                        <textarea name="keywords" id="keywords" cols="30" rows="10" required>{{keywords}}</textarea>
                    </div>
                    <button id='submit' type="submit">Submit</button>
                </form>
            </div>
            <div class="vis col-8">

            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://d3js.org/d3.v5.min.js"></script>
    <script>
        var submit = document.querySelector('#submit');
        var topic_input = document.querySelector('#topic');
        var keywords_input = document.querySelector('#keywords')
        
        submit.addEventListener('click', function(e){
            e.preventDefault();
            $.ajax({
                url:'/data',
                method: 'post',
                data:{
                    topic:topic_input.value,
                    keywords: keywords_input.value
                },
                success: function(res){
                    var data = res.data;
                    console.log(data)
                    vis(data)
                }
            })
        })

        function vis(data){
            
        }
    </script>
</body>
</html>